extends ../_shared/layout
block head
   script(src='/public/scripts/addGenre.js')
   script(src="https://rawgit.com/bassjobsen/Bootstrap-3-Typeahead/master/bootstrap3-typeahead.js")
block body
  .col-md-offset-4.col-md-4.bordered.rounded
    form(action="/genres/add" method="POST" autocomplete="off")
      .form-group
        label(for='title') Name:
        input.form-control#autocomplete(name="genre" placeholder="Enter Genre")
      button.btn.btn-success(type='submit') 
        |Save

