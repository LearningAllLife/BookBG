extends ../_shared/layout
block body
  .col-md-offset-4.col-md-4.bordered.rounded
    form(action="/users/register" method="POST")
      .form-group
        label(for='firstName') Firstname:
        input#firstName.form-control(name="firstname" type='text' required)
      .form-group
        label(for='lastName') LastName
        input#lastName.form-control(name="lastname" type='text' required)
      .form-group
        label(for='email') Email address:
        input#email.form-control(name="email" type='text' required)
      .form-group
        label(for='username') Username:
        input#username.form-control(name="username" type='text' required)
      .form-group
        label(for='pwd') Password:
        input#pwd.form-control(name="password" type='password' required)
      button.btn.btn-default(type='submit') Submit
